<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="container-sm text-center">
      <%- include("./partials/header.ejs") %>
      <p>I am the index page</p>
      <ul class="row nav">
        <% for (let i = 0; i < monsters.length; i++) { %>
        <li class="col-sm nav-item">
          <a href="/monster-mash/<%=monsters[i]._id%>" class="nav-link"
            ><%=monsters[i].name%></a
          >
          <div>
            <a href="/monster-mash/edit/<%=monsters[i]._id%>"
              ><button class="btn btn-primary">Edit</button></a
            >
            <form
              action="/monster-mash/<%=monsters[i]._id%>?_method=DELETE"
              method="post"
            >
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </li>
        <% } %>
      </ul>
      <br />
      <a href="/monster-mash/add"
        ><button class="btn btn-primary btn-large">Add New monster</button>
      </a>
      <a href="/auth/login"><button>Login</button></a>
      <form action="/auth/logout?_method=DELETE" method="post">
        <button>Logout</button>
      </form>
    </div>
  </body>
</html>
